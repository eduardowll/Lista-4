#include <iostream>
using namespace std;

int main (){
	
	int vetor[20], cod;
	
	for(int i=0; i < 20;i++){
		cout << "Digite o numero " << i + 1 << " do vetor: ";
		cin >> vetor[i];
	}
	cout << "Digite o codigo entre 1 (do primeiro a o ultimo) e 2 (do ultimo ao primeiro): ";
	cin >> cod;
	if(cod == 1){
		for(int i = 0; i < 20; i++){
			cout << vetor[i] << " ";
		}
	}else{
		for(int i = 19; i >= 0; i--){
			cout << vetor[i] << " ";
		}
	}
}
